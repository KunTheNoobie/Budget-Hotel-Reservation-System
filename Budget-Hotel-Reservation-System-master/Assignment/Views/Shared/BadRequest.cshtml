@* 
    400 Bad Request Error Page
    Displays when a user sends an invalid or malformed request to the server.
    Provides navigation options to return to the homepage or go back.
*@
@{
    ViewData["Title"] = "Bad Request";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="error-page">
                <h1 class="display-1 fw-bold text-warning">400</h1>
                <h2 class="mb-4">Bad Request</h2>
                <p class="lead text-muted mb-4">
                    The request you sent was invalid or malformed.
                </p>
                <div class="d-flex gap-3 justify-content-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house-door me-2"></i>Go to Homepage
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Go Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

