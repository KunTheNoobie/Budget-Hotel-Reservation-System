@* 
    Booking Receipt View
    Displays a printable receipt for a completed booking.
    Shows booking details, payment information, transaction ID, and QR code.
    Optimized for printing with print-specific CSS styles.
*@
@model Assignment.Models.Booking
@{
    ViewData["Title"] = "Booking Receipt";
    var nights = (Model.CheckOutDate - Model.CheckInDate).Days;
    var basePrice = Model.Room.RoomType.BasePrice * nights;
    var isPackageBooking = Model.TotalPrice != basePrice && 
                          (Model.Promotion == null || Model.TotalPrice > basePrice);
    var package = ViewBag.Package as Assignment.Models.Package;
    var packageServices = ViewBag.PackageServices as List<Assignment.Models.PackageItem> ?? new List<Assignment.Models.PackageItem>();
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white text-center">
            <h2>Budget Hotel Reservation</h2>
            <h3>Booking Receipt</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Booking Information</h5>
                    <p><strong>Booking ID:</strong> #@Model.BookingId</p>
                    <p><strong>Booking Date:</strong> @Model.BookingDate.ToString("MM/dd/yyyy HH:mm")</p>
                    <p><strong>Status:</strong> <span class="badge bg-primary">@Model.Status</span></p>
                </div>
                <div class="col-md-6 text-end">
                    <h5>Receipt</h5>
                    <p><strong>Date:</strong> @DateTime.Now.ToString("MM/dd/yyyy HH:mm")</p>
                </div>
            </div>

            <hr />

            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Guest Information</h5>
                    <p><strong>Name:</strong> @Model.User.FullName</p>
                    <p><strong>Email:</strong> @Model.User.Email</p>
                    @if (!string.IsNullOrEmpty(Model.User.PhoneNumber))
                    {
                        <p><strong>Phone:</strong> @Model.User.PhoneNumber</p>
                    }
                </div>
                <div class="col-md-6">
                    <h5>Room Information</h5>
                    <p><strong>Room Number:</strong> @Model.Room.RoomNumber</p>
                    <p><strong>Room Type:</strong> @Model.Room.RoomType.Name</p>
                    <p><strong>Occupancy:</strong> @Model.Room.RoomType.Occupancy person(s)</p>
                </div>
            </div>

            <hr />

            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Booking Dates</h5>
                    <p><strong>Check-In:</strong> @Model.CheckInDate.ToString("MM/dd/yyyy")</p>
                    <p><strong>Check-Out:</strong> @Model.CheckOutDate.ToString("MM/dd/yyyy")</p>
                    <p><strong>Nights:</strong> @((Model.CheckOutDate - Model.CheckInDate).Days)</p>
                </div>
                <div class="col-md-6">
                    <h5>Pricing</h5>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            @if (isPackageBooking && package != null)
                            {
                                var roomPrice = Model.Room.RoomType.BasePrice * nights;
                                var servicesTotal = packageServices.Sum(pi => pi.Service != null ? (pi.Service.Price * pi.Quantity) : 0);
                                
                                <tr>
                                    <td>Room (@nights night(s) × RM @Model.Room.RoomType.BasePrice.ToString("F2")):</td>
                                    <td class="text-end">RM @roomPrice.ToString("F2")</td>
                                </tr>
                                @if (packageServices.Any())
                                {
                                    @foreach (var serviceItem in packageServices)
                                    {
                                        if (serviceItem.Service != null)
                                        {
                                            var serviceTotal = serviceItem.Service.Price * serviceItem.Quantity;
                                            <tr>
                                                <td class="ps-3">
                                                    <small>• @serviceItem.Service.Name
                                                    @if (serviceItem.Quantity > 1)
                                                    {
                                                        <text> (x@(serviceItem.Quantity))</text>
                                                    }
                                                    </small>
                                                </td>
                                                <td class="text-end"><small>RM @serviceTotal.ToString("F2")</small></td>
                                            </tr>
                                        }
                                    }
                                    <tr>
                                        <td><strong>Services Total:</strong></td>
                                        <td class="text-end"><strong>RM @servicesTotal.ToString("F2")</strong></td>
                                    </tr>
                                }
                                <tr class="table-active">
                                    <td><strong>Package Total:</strong></td>
                                    <td class="text-end"><strong class="text-primary">RM @Model.TotalPrice.ToString("F2")</strong></td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td>Base Price (@nights nights × RM @Model.Room.RoomType.BasePrice.ToString("F2")):</td>
                                    <td class="text-end">RM @basePrice.ToString("F2")</td>
                                </tr>
                                @if (Model.Promotion != null)
                                {
                                    var discount = basePrice - Model.TotalPrice;
                                    <tr>
                                        <td>Promotion (@Model.Promotion.Code):</td>
                                        <td class="text-end text-danger">-RM @discount.ToString("F2")</td>
                                    </tr>
                                }
                                <tr class="table-active">
                                    <td><strong>Total Amount:</strong></td>
                                    <td class="text-end"><strong>RM @Model.TotalPrice.ToString("F2")</strong></td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>

            @if (Model.PaymentAmount.HasValue)
            {
                <hr />
                <div class="row mb-4">
                    <div class="col-md-12">
                        <h5>Payment Information</h5>
                        <p><strong>Amount Paid:</strong> RM @Model.PaymentAmount.Value.ToString("F2")</p>
                        <p><strong>Payment Method:</strong> @(Model.PaymentMethod?.ToString() ?? "N/A")</p>
                        <p><strong>Payment Status:</strong> <span class="badge bg-success">@Model.PaymentStatus</span></p>
                        @if (Model.PaymentDate.HasValue)
                        {
                            <p><strong>Payment Date:</strong> @Model.PaymentDate.Value.ToString("MM/dd/yyyy HH:mm")</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.TransactionId))
                        {
                            <p><strong>Transaction ID:</strong> @Model.TransactionId</p>
                        }
                    </div>
                </div>
            }

            <hr />

            <div class="text-center mt-4">
                <p class="text-muted">
                    <small>Thank you for choosing Budget Hotel Reservation!</small><br />
                    <small>For inquiries, please contact us at support@budgethotel.com</small>
                </p>
                <div class="row mt-4 no-print">
                    <div class="col-12 text-center">
                        <button onclick="window.print()" class="btn btn-primary me-2"><i class="bi bi-printer"></i> Print Receipt</button>
                        <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-secondary">Back to Bookings</a>
                        <a asp-controller="Booking" asp-action="BookingDetails" asp-route-id="@Model.BookingId" class="btn btn-info ms-2">View Details</a>
                    </div>
                </div>
                
                <div class="row mt-5">
                    <div class="col-12 text-center">
                        <h5>Scan for Booking Details</h5>
                        <div id="qrcode" class="d-flex justify-content-center mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function generateQRCode() {
            var qrCodeData = "BookingID:@Model.BookingId|User:@Model.User.Email|Amount:@Model.TotalPrice|Room:@Model.Room.RoomNumber|CheckIn:@Model.CheckInDate.ToString("yyyy-MM-dd")|CheckOut:@Model.CheckOutDate.ToString("yyyy-MM-dd")";
            var qrcodeElement = document.getElementById("qrcode");
            if (qrcodeElement && typeof QRCode !== 'undefined') {
                // Clear any existing content
                qrcodeElement.innerHTML = '';
                try {
                    var qrcode = new QRCode(qrcodeElement, {
                        text: qrCodeData,
            width: 128,
            height: 128,
                        colorDark: "#000000",
                        colorLight: "#ffffff",
                        correctLevel: QRCode.CorrectLevel.H
                    });
                } catch (e) {
                    console.error('QR Code generation error:', e);
                    qrcodeElement.innerHTML = '<p class="text-danger">Failed to generate QR code. Please refresh the page.</p>';
                }
            }
        }
        
        $(document).ready(function() {
            // Check if QRCode library is already loaded
            if (typeof QRCode !== 'undefined') {
                generateQRCode();
            } else {
                // Load the library and then generate
                var script = document.createElement('script');
                // Try multiple CDNs for better reliability
                var cdns = [
                    'https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js',
                    'https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js',
                    'https://unpkg.com/qrcodejs@1.0.0/qrcode.min.js'
                ];
                
                function tryLoadCDN(index) {
                    if (index >= cdns.length) {
                        document.getElementById("qrcode").innerHTML = '<p class="text-danger">Failed to load QR code library. Please check your internet connection.</p>';
                        return;
                    }
                    
                    var script = document.createElement('script');
                    script.src = cdns[index];
                    script.onload = function() {
                        generateQRCode();
                    };
                    script.onerror = function() {
                        tryLoadCDN(index + 1);
                    };
                    document.head.appendChild(script);
                }
                
                tryLoadCDN(0);
            }
        });
    </script>
}

<style>
    @@media print {
        .btn, .navbar, footer { display: none !important; }
        .card { border: none !important; box-shadow: none !important; }
    }
</style>

