@* 
    Forgot Password View
    Displays form for users to request a password reset via email.
    Users enter their email address and receive a password reset link.
*@
@model Assignment.ViewModels.Security.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark text-center">
                    <h3><i class="bi bi-key"></i> Forgot Password</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info">
                            @ViewBag.Message
                        </div>
                    }

                    <p class="text-muted">Enter your email address and we'll send you a One-Time Password (OTP) code to reset your password.</p>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                Email Address
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" required maxlength="100" />
                            <small class="form-text text-muted">We'll send a 6-digit OTP code to this email address.</small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg">Send OTP Code</button>
                        </div>
                    </form>

                    <hr />

                    <div class="text-center">
                        <a asp-action="Login">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

