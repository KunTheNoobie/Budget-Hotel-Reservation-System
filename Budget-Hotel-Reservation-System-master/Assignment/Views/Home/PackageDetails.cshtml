                                    <input type="date" class="form-control" id="checkOut" name="checkOut" 
                                           min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" 
                                           value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" required />
                                </div>
                                
