                    else
                    {
                        <div class="mb-3">
                            <form asp-controller="Booking" asp-action="Create" method="get" id="packageBookingForm">
                                @{
                                    var roomType = ViewBag.RoomType as Assignment.Models.RoomType;
                                    var roomTypeId = Model.RoomTypeId ?? roomType?.RoomTypeId;
