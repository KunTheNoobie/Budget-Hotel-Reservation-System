                        <div class="alert alert-info mb-3">
                            <i class="bi bi-info-circle me-2"></i>Please <a asp-controller="Security" asp-action="Login" class="alert-link">login</a> to book this package.
                        </div>
                        <a asp-controller="Security" asp-action="Login" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login to Book
                        </a>
