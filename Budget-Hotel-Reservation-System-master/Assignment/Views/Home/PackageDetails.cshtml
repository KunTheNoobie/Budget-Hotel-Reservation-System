    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle avatar image loading errors
            $('.review-avatar-img').on('error', function() {
                $(this).hide();
                $(this).siblings('.review-avatar-fallback').show();
            }).on('load', function() {
                // Ensure fallback is hidden when image loads successfully
                $(this).siblings('.review-avatar-fallback').hide();
            });

            // Helper function to format date in local timezone as YYYY-MM-DD (consistent with server-side)
            function formatLocalDate(date) {
                var year = date.getFullYear();
                var month = String(date.getMonth() + 1).padStart(2, '0');
                var day = String(date.getDate()).padStart(2, '0');
                return year + '-' + month + '-' + day;
            }

            // Helper function to parse date string (YYYY-MM-DD) in local timezone
            // This ensures consistent parsing with how 'today' is created (local timezone)
            function parseLocalDate(dateString) {
                if (!dateString) return null;
                var parts = dateString.split('-');
                if (parts.length !== 3) return null;
                var year = parseInt(parts[0], 10);
                var month = parseInt(parts[1], 10) - 1; // Month is 0-indexed
                var day = parseInt(parts[2], 10);
                return new Date(year, month, day, 0, 0, 0, 0); // Creates date in local timezone
            }

            var checkInInput = $('#checkIn');
            var checkOutInput = $('#checkOut');
            
            // Set minimum dates using local timezone (consistent with server-side DateTime.Today)
            var today = new Date();
            today.setHours(0, 0, 0, 0);
            var tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            tomorrow.setHours(0, 0, 0, 0);
            
            checkInInput.attr('min', formatLocalDate(today));
            checkOutInput.attr('min', formatLocalDate(tomorrow));
            
            // Validate check-out is after check-in
            checkInInput.on('change', function() {
                var checkInDate = parseLocalDate($(this).val());
                if (checkInDate && !isNaN(checkInDate.getTime())) {
                    var minCheckOut = new Date(checkInDate);
                    minCheckOut.setDate(minCheckOut.getDate() + 1);
                    checkOutInput.attr('min', formatLocalDate(minCheckOut));
                    
                    var checkOutDate = parseLocalDate(checkOutInput.val());
                    if (checkOutDate && !isNaN(checkOutDate.getTime()) && checkOutDate <= checkInDate) {
                        checkOutInput.val(formatLocalDate(minCheckOut));
                    }
                }
            });
            
            checkOutInput.on('change', function() {
                var checkInDate = parseLocalDate(checkInInput.val());
                var checkOutDate = parseLocalDate($(this).val());
                
                if (checkInDate && checkOutDate && !isNaN(checkInDate.getTime()) && !isNaN(checkOutDate.getTime()) && checkOutDate <= checkInDate) {
                    alert('Check-out date must be after check-in date.');
                    var minCheckOut = new Date(checkInDate);
                    minCheckOut.setDate(minCheckOut.getDate() + 1);
                    $(this).val(formatLocalDate(minCheckOut));
                }
            });
            
            // Form validation
            $('#packageBookingForm').on('submit', function(e) {
                var checkIn = parseLocalDate(checkInInput.val());
                var checkOut = parseLocalDate(checkOutInput.val());
                var today = new Date();
                today.setHours(0, 0, 0, 0);
                
                if (!checkIn || !checkOut || isNaN(checkIn.getTime()) || isNaN(checkOut.getTime())) {
                    e.preventDefault();
                    alert('Please select valid dates.');
                    return false;
                }
                
                if (checkIn < today) {
                    e.preventDefault();
                    alert('Check-in date cannot be in the past.');
                    return false;
                }
                
                if (checkOut <= checkIn) {
                    e.preventDefault();
                    alert('Check-out date must be after check-in date.');
                    return false;
                }
            });
        });
    </script>
}

