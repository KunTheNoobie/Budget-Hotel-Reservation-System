@* 
    Admin Edit Amenity View
    Displays form for editing an existing amenity's information.
    Allows modification of amenity name and image.
*@
@model Assignment.Models.Amenity
@{
    ViewData["Title"] = "Edit Amenity";
}

<div class="container">
    <h2>Edit Amenity</h2>

    <form asp-action="EditAmenity" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="AmenityId" />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" maxlength="100" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Image</label>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-2">
                    <label class="form-label">Current Image</label>
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-height: 200px;" onerror="this.style.display='none';" />
                        <div>
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteAmenityImage(@Model.AmenityId)">
                                <i class="bi bi-trash"></i> Delete Image
                            </button>
                        </div>
                    </div>
                </div>
            }
            <div class="mb-2">
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                <small class="form-text text-muted">Upload a new image file (JPG, PNG, GIF, etc.)</small>
            </div>
            <div class="text-muted mb-2">OR</div>
            <div>
                <input type="url" name="imageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                <small class="form-text text-muted">Enter a full URL to an image for this amenity (leave empty to keep current image)</small>
            </div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Amenities" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function deleteAmenityImage(amenityId) {
            if (confirm('Are you sure you want to delete this image?')) {
                var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("DeleteAmenityImage", "Admin")/' + amenityId;
                
                var tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                form.appendChild(tokenInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}

