@* 
    Admin Amenities Management View
    Displays list of all available amenities that can be associated with room types.
    Allows admins to create, edit, and manage amenity definitions and images.
*@
@model List<Assignment.Models.Amenity>
@{
    ViewData["Title"] = "Amenity Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Amenity Management</h2>
        <a asp-action="CreateAmenity" class="btn btn-primary">Create New Amenity</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="get" class="mb-3">
                <div class="row">
                    <div class="col-md-8">
                        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by amenity name..." />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-secondary">Search</button>
                        <a asp-action="Amenities" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var amenity in Model)
                        {
                            <tr>
                                <td>@amenity.AmenityId</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(amenity.ImageUrl))
                                    {
                                        <img src="@amenity.ImageUrl" alt="@amenity.Name" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/50?text=No+Image'">
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Image</span>
                                    }
                                </td>
                                <td>@amenity.Name</td>
                                <td>
                                    <a asp-action="EditAmenity" asp-route-id="@amenity.AmenityId" class="btn btn-sm btn-primary">Edit</a>
                                    <form asp-action="DeleteAmenity" asp-route-id="@amenity.AmenityId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this amenity?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No amenities found. <a asp-action="CreateAmenity">Create your first amenity</a> to get started.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&searchTerm=@ViewBag.SearchTerm">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

