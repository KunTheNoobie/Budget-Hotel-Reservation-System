@* 
    Admin Rooms Management View
    Displays list of all individual rooms with their room numbers, types, and status.
    Allows admins to create, edit, and manage room availability and status.
*@
@using Assignment.Helpers
@using Assignment.Models
@using System.Security.Claims
@{
    var role = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
}
@model List<Assignment.Models.Room>
@{
    ViewData["Title"] = "Room Management";
    var roomTypes = ViewBag.RoomTypes as List<Assignment.Models.RoomType>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Room Management</h2>
        @if (AuthenticationHelper.GetUserRole(Context) == UserRole.Admin || AuthenticationHelper.GetUserRole(Context) == UserRole.Manager)
        {
            <a asp-action="CreateRoom" class="btn btn-primary">Create New Room</a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="get" class="mb-3">
                <div class="row">
                    <div class="col-md-8">
                        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by room number or type..." />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-secondary">Search</button>
                        <a asp-action="Rooms" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Room Number</th>
                        <th>Room Type</th>
                        <th>Status</th>
                        @if(role != "Staff")
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var room in Model)
                        {
                            <tr>
                                <td>@room.RoomId</td>
                                <td>@room.RoomNumber</td>
                                <td>@room.RoomType?.Name</td>
                                <td>
                                    <span class="badge @(room.Status == RoomStatus.Available ? "bg-success" : room.Status == RoomStatus.Occupied ? "bg-danger" : "bg-warning")">
                                        @room.Status
                                    </span>
                                </td>
                                @if(role != "Staff")
                                {
                                <td>
                                    <a asp-action="EditRoom" asp-route-id="@room.RoomId" class="btn btn-sm btn-primary">Edit</a>
                                    <form asp-action="DeleteRoom" asp-route-id="@room.RoomId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this room?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form> 
                                </td>
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No rooms found. 
                                @if (AuthenticationHelper.GetUserRole(Context) == UserRole.Admin || AuthenticationHelper.GetUserRole(Context) == UserRole.Manager)
                                {
                                    <a asp-action="CreateRoom">Create your first room</a>
                                }
                                else
                                {
                                    <span>Contact your administrator to add rooms.</span>
                                }
                                to get started.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&searchTerm=@ViewBag.SearchTerm">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

