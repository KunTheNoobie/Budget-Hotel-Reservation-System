@* 
    Admin Users Management View
    Displays list of all users in the system with filtering, search, and pagination.
    Allows admins to view, edit, activate/deactivate, and manage user accounts.
*@
@using Assignment.Helpers
@using Assignment.Models
@model List<Assignment.Models.User>
@using System.Security.Claims
@{
    ViewData["Title"] = "User Management";
}
@{
    var role = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Management</h2>
        @if (AuthenticationHelper.GetUserRole(Context) == UserRole.Admin)
        {
        <a asp-action="CreateUser" class="btn btn-primary">Create New User</a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="get" class="mb-3">
                <div class="row">
                    <div class="col-md-8">
                        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by name or email..." />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-secondary">Search</button>
                        <a asp-action="Users" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Email Verified</th>
                        @if (role != "Staff")
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@(user.PhoneNumber ?? "-")</td>
                                <td>@user.Role</td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsEmailVerified)
                                    {
                                        <span class="badge bg-success">Verified</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Not Verified</span>
                                    }
                                </td>
                                <td>
                                    @if (role == "Admin" || role == "Manager")
                                    {
                                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-sm btn-primary">Edit</a>
                                    
                                        @if (role == "Admin"){
                                            @if (user.Email != "admin@hotel.com")
                                            {
                                                <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-sm btn-danger" disabled title="Cannot delete main admin account">Delete</button>
                                            }
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No users found. 
                                @if (AuthenticationHelper.GetUserRole(Context) == UserRole.Admin)
                                {
                                    <a asp-action="CreateUser">Create your first user</a>
                                }
                                else
                                {
                                    <span>Contact your administrator to add users.</span>
                                }
                                to get started.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&searchTerm=@ViewBag.SearchTerm">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

