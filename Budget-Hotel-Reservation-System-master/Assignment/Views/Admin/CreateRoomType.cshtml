@* 
    Admin Create Room Type View
    Displays form for creating a new room type with pricing, occupancy, and hotel assignment.
    Includes fields for name, description, base price, occupancy, hotel selection, and image upload.
*@
@model Assignment.Models.RoomType
@{
    ViewData["Title"] = "Create Room Type";
    var hotels = ViewBag.Hotels as List<Assignment.Models.Hotel> ?? new List<Assignment.Models.Hotel>();
}

<div class="container">
    <h2>Create New Room Type</h2>

    <form asp-action="CreateRoomType" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" maxlength="100" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4" maxlength="1000"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Occupancy" class="form-label"></label>
                <input asp-for="Occupancy" class="form-control" type="number" min="1" max="10" required />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="BasePrice" class="form-label"></label>
                <input asp-for="BasePrice" class="form-control" type="number" step="0.01" min="0" max="99999.99" required />
                <span asp-validation-for="BasePrice" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="HotelId" class="form-label"></label>
            <select asp-for="HotelId" class="form-select" required>
                <option value="">-- Select Hotel --</option>
                @foreach (var hotel in hotels)
                {
                    <option value="@hotel.HotelId">@hotel.Name - @hotel.City</option>
                }
            </select>
            <span asp-validation-for="HotelId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Image</label>
            <div class="mb-2">
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                <small class="form-text text-muted">Upload an image file (JPG, PNG, GIF, etc.)</small>
            </div>
            <div class="text-muted mb-2">OR</div>
            <div>
                <input type="url" name="imageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                <small class="form-text text-muted">Enter a full URL to an image</small>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Amenities</label>
            @{
                var amenities = ViewBag.Amenities as List<Assignment.Models.Amenity> ?? new List<Assignment.Models.Amenity>();
            }
            @if (amenities.Any())
            {
                <div class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                    <div class="row g-2">
                        @foreach (var amenity in amenities)
                        {
                            <div class="col-md-3 col-sm-4 col-6">
                                <div class="amenity-item position-relative" style="cursor: pointer; border: 2px solid #dee2e6; border-radius: 8px; padding: 10px; text-align: center; transition: all 0.3s;" 
                                     onclick="toggleAmenity(@amenity.AmenityId)">
                                    <input type="checkbox" name="selectedAmenities" value="@amenity.AmenityId" id="amenity_@amenity.AmenityId" style="display: none;" />
                                    @if (!string.IsNullOrEmpty(amenity.ImageUrl))
                                    {
                                        <img src="@amenity.ImageUrl" alt="@amenity.Name" class="mb-2" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" onerror="this.style.display='none';">
                                    }
                                    else
                                    {
                                        <div class="mb-2 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; background-color: #f8f9fa; border-radius: 4px; margin: 0 auto;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                    <div class="small">@amenity.Name</div>
                                    <div class="check-icon" style="position: absolute; top: 5px; right: 5px; display: none;">
                                        <i class="bi bi-check-circle-fill text-success" style="font-size: 20px;"></i>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <small class="form-text text-muted">Click on amenities to select them for this room type</small>
            }
            else
            {
                <p class="text-muted">No amenities available. <a asp-action="Amenities">Create amenities first</a>.</p>
            }
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="RoomTypes" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function toggleAmenity(amenityId) {
            var checkbox = document.getElementById('amenity_' + amenityId);
            var item = checkbox.closest('.amenity-item');
            var checkIcon = item.querySelector('.check-icon');
            
            checkbox.checked = !checkbox.checked;
            
            if (checkbox.checked) {
                item.style.borderColor = '#0d6efd';
                item.style.backgroundColor = '#e7f1ff';
                checkIcon.style.display = 'block';
            } else {
                item.style.borderColor = '#dee2e6';
                item.style.backgroundColor = 'transparent';
                checkIcon.style.display = 'none';
            }
        }
        
        // Initialize selected amenities on page load
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('input[name="selectedAmenities"]').forEach(function(checkbox) {
                if (checkbox.checked) {
                    var item = checkbox.closest('.amenity-item');
                    var checkIcon = item.querySelector('.check-icon');
                    item.style.borderColor = '#0d6efd';
                    item.style.backgroundColor = '#e7f1ff';
                    checkIcon.style.display = 'block';
                }
            });
        });
    </script>
}

