@* 
    Admin Create Service View
    Displays form for creating a new additional service (e.g., spa, laundry, room service).
    Includes fields for service name, description, and pricing.
*@
@model Assignment.Models.Service
@{
    ViewData["Title"] = "Create Service";
}

<div class="container">
    <h2>Create New Service</h2>

    <form asp-action="CreateService" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" maxlength="100" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4" maxlength="500"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Services" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

