@* 
    Admin Edit Package Image View
    Displays form for updating a package's image.
    Allows uploading a new image to replace the existing package image.
*@
@model Assignment.Models.Package
@{
    ViewData["Title"] = "Edit Package Image";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Edit Image - @Model.Name</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Current Image</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid mb-3" alt="@Model.Name" onerror="this.src='https://via.placeholder.com/400x300?text=Image+Not+Found'">
                        <p>
                            <small class="text-muted">
                                @if (Model.ImageUrl.StartsWith("/uploads/"))
                                {
                                    <span class="badge bg-info">Local Upload</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">External URL</span>
                                }
                            </small>
                        </p>
                    }
                    else
                    {
                        <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 300px;">
                            <span class="text-white">No Image</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Update Image</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdatePackageImage" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="packageId" value="@Model.PackageId" />
                        
                        <div class="mb-3">
                            <label class="form-label">Upload Image File</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Supported formats: JPG, PNG, GIF, WebP</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">OR Enter Image URL</label>
                            <input type="url" name="imageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                            <small class="form-text text-muted">Enter a full URL to an image (leave empty to keep current image)</small>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Update Image</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

