@* 
    Admin Packages Management View
    Displays list of all stay packages that bundle rooms and services together.
    Allows admins to create, edit, and manage package offerings and pricing.
*@
@using Assignment.Helpers
@using Assignment.Models
@model List<Assignment.Models.Package>
@{
    ViewData["Title"] = "Package Management";
}
@using System.Security.Claims
@{
    var role = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Package Management</h2>
        @if (AuthenticationHelper.GetUserRole(Context) == UserRole.Admin || AuthenticationHelper.GetUserRole(Context) == UserRole.Manager)
        {
            <a asp-action="CreatePackage" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>Create New Package
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="get" class="mb-3">
                <div class="row">
                    <div class="col-md-8">
                        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by package name..." />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-secondary">Search</button>
                        <a asp-action="Packages" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>Status</th>
                        @if (role == "Admin")
                        {
                        <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var package in Model)
                        {
                            <tr>
                                <td>@package.PackageId</td>
                                <td>@package.Name</td>
                                <td>RM @package.TotalPrice.ToString("F2")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(package.ImageUrl))
                                    {
                                        <img src="@package.ImageUrl" alt="@package.Name" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/50?text=No+Image'">
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Image</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(package.IsActive ? "bg-success" : "bg-secondary")">
                                        @(package.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                @if (role == "Admin")
                                {
                                <td>
                                    <a asp-action="EditPackage" asp-route-id="@package.PackageId" class="btn btn-sm btn-primary">Edit</a>
                                    <form asp-action="DeletePackage" asp-route-id="@package.PackageId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this package? This will also delete all package items.');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No packages found. 
                                @if (AuthenticationHelper.GetUserRole(Context) == UserRole.Admin || AuthenticationHelper.GetUserRole(Context) == UserRole.Manager)
                                {
                                    <a asp-action="CreatePackage">Create your first package</a>
                                }
                                else
                                {
                                    <span>Contact your administrator to add packages.</span>
                                }
                                to get started.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&searchTerm=@ViewBag.SearchTerm">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

