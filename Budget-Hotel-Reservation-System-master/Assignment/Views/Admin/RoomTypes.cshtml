@* 
    Admin Room Types Management View
    Displays list of all room types with pricing, occupancy, and amenities.
    Allows admins to create, edit, and manage room type configurations.
*@
@using Assignment.Helpers
@using Assignment.Models
@model List<Assignment.Models.RoomType>
@{
    ViewData["Title"] = "Room Type Management";
}
@using System.Security.Claims
@{
    var role = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Room Type Management</h2>
        @if (AuthenticationHelper.GetUserRole(Context) == UserRole.Admin || AuthenticationHelper.GetUserRole(Context) == UserRole.Manager)
        {
        <a asp-action="CreateRoomType" class="btn btn-primary">Create New Room Type</a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="get" class="mb-3">
                <div class="row">
                    <div class="col-md-8">
                        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by room type name or hotel..." />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-secondary">Search</button>
                        <a asp-action="RoomTypes" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Hotel</th>
                        <th>Price</th>
                        @if (role != "Staff")
                        {
                        <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var roomType in Model)
                        {
                            <tr>
                                <td>@roomType.RoomTypeId</td>
                                <td>
                                    @if (roomType.RoomImages != null && roomType.RoomImages.Any())
                                    {
                                        <img src="@roomType.RoomImages.First().ImageUrl" alt="@roomType.Name" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/50?text=No+Image'">
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Image</span>
                                    }
                                </td>
                                <td>@roomType.Name</td>
                                <td>@roomType.Hotel?.Name</td>
                                <td>RM @roomType.BasePrice.ToString("F2")</td>
                                @if (role != "Staff")
                                {
                                <td>
                                    <a asp-action="EditRoomType" asp-route-id="@roomType.RoomTypeId" class="btn btn-sm btn-info">Edit</a>
                                    <form asp-action="DeleteRoomType" asp-route-id="@roomType.RoomTypeId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this room type? This will also delete all associated rooms and images.');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No room types found. 
                                @if (AuthenticationHelper.GetUserRole(Context) == UserRole.Admin || AuthenticationHelper.GetUserRole(Context) == UserRole.Manager)
                                {
                                    <a asp-action="CreateRoomType">Create your first room type</a>
                                }
                                else
                                {
                                    <span>Contact your administrator to add room types.</span>
                                }
                                to get started.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (ViewBag.TotalPages > 0 && ViewBag.TotalPages > 1 && Model != null && Model.Count > 0)
            {
                <nav>
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&searchTerm=@(ViewBag.SearchTerm ?? "")">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

